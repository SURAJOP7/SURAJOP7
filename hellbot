#!/bin/bash


_get_repolink () {
    local regex
    regex='(https?)://github.com/.+/.+'
    if [[ $LIGHTYAGAMI_REPO == "LIGHTYAGAMIBOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL1RoZVZhZGVycy9WYWRlci9hcmNoaXZlL21hc3Rlci56aXA=" | base64 -d
    elif [[ $LIGHTYAGAMI_REPO == "Hellbot" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL1RoZVZhZGVycy9WYWRlci9hcmNoaXZlL21hc3Rlci56aXA=" | base64 -d
    elif [[ $LIGHTYAGAMI_REPO =~ $regex ]]
    then
        if [[ $LIGHTYAGAMI_REPO_BRANCH ]]
        then
            echo "${LIGHTYAGAMI_REPO}/archive/${LIGHTYAGAMI_REPO_BRANCH}.zip"
        else
            echo "${LIGHTYAGAMI_REPO}/archive/master.zip"
        fi
    else
        echo "aHR0cHM6Ly9naXRodWIuY29tL1RoZVZhZGVycy9WYWRlci9hcmNoaXZlL21hc3Rlci56aXA=" | base64 -d
    fi
}


_set_bot () {
    local zippath
    zippath="LIGHGYAGAMIBOT.zip"
    echo "  Downloading source code ..."
    wget -q $(_get_repolink) -O "$zippath"
    echo "  Unpacking Data ..."
    LIGHTYAGAMIPATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo "Done"
    echo "  Cleaning ..."
    rm -rf "$zippath"
    sleep 5
    cd $HELLPATH
    echo "    Starting LIGHTYAGAMIBOT    "
    echo "
                              ＬＩＧＨＴＹＡＧＡＭＩＢＯＴ
    "

    python3 ../setup/updater.py ../requirements.txt requirements.txt
    python3 -m userbot
}

_set_bot
